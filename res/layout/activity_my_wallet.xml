<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的钱包"
            android:textColor="#ff0000"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/backTn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_back_red" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ff0000"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:text="星币：16,200"
        android:textSize="20sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/my_wallet_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/my_wallet_select1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_red_bg"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/my_wallet_select2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_gray_bg"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/my_wallet_select3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_gray_bg"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/my_wallet_select4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="8dp"
            android:background="@drawable/dot_gray_bg"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</LinearLayout>