<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F4EF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/select_img_height"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:clipChildren="false"
            android:layerType="software" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="@dimen/select_img_height"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:clipChildren="false" >
            </android.support.v4.view.ViewPager>

            <!-- back btn -->

            <LinearLayout
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/back_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:gravity="left|center"
                    android:text="发现"
                    android:textColor="@drawable/back_btn_text_color"
                    android:textSize="20sp" />
            </LinearLayout>
            <!-- end back ben -->
        </RelativeLayout>

        <!-- name and age layout -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0" >

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="bottom"
                android:text="ANNIE"
                android:textColor="#12171B"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/ageTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/nameTv"
                android:gravity="bottom"
                android:text="22"
                android:textColor="#A1919C"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/sexTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/ageTv"
                android:gravity="bottom"
                android:text="♀"
                android:textColor="#A1919C"
                android:textSize="24sp" />
        </RelativeLayout>
        <!-- end of  name and age layout -->

        <TextView
            android:id="@+id/sayingTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:text="大家好， 我是上海人，我喜欢跳舞，喜欢唱歌，希望成为一名歌手，请大家多多支持"
            android:textColor="#8D8c88"
            android:textSize="15sp" />

        <!-- thumb layout -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <!-- thumb btn -->

            <ImageView
                android:id="@+id/thumbBtn"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/thumb_btn" />

            <!-- less thmub num layout -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:gravity="right|bottom"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="剩余票数："
                    android:textColor="#454346"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/thumbCountTv"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="10"
                    android:textColor="#454346"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- end of less thmub num layout -->
        </RelativeLayout>
        <!-- thumb layout end -->
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0"
        android:background="@drawable/main_select_line"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="0"
        android:background="#F2F1ED"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="4" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/main_select_btn_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main_select_01_btn" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="资料"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_select_btn_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main_select_02_btn" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="视频"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_select_btn_03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main_select_03_btn" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="换一个"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="4" >
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0"
        android:background="@drawable/main_select_line"
        android:text="" />

</LinearLayout>