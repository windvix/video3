<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar_bg" >

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="账号管理"
            android:textColor="@color/title_bar_text_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/editBtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_btn_selector"
            android:gravity="center"
            android:text="编辑" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:background="#C12320" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/no_use"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <com.athudong.video.component.RoundImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="0"
                    android:id="@+id/headImg"
                    android:scaleType="fitCenter"
                    android:src="@drawable/test_head_01" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="刘玲玲"
                        android:textColor="@color/me_fans_text_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/ageTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textColor="@color/me_fans_text_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="岁"
                            android:textColor="@color/me_fans_text_color" />

                        <TextView
                            android:id="@+id/starSignTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="巨蟹"
                            android:textColor="@color/me_fans_text_color" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_rank_02" />

                        <ImageView
                            android:id="@+id/sexImg"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_woman" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            
            
              <!-- one -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_account_manager_list_item"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0"
                    android:gravity="center|left"
                    android:text="ID"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="right|center"
                    android:inputType="none"
                    android:text="12345678"
                    android:textColor="#c7c6c7"
                    android:textSize="15sp" />
            </LinearLayout>
            <!-- one end -->
            
            
            <!--  one  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_account_manager_list_item"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0"
                    android:gravity="center|left"
                    android:text="昵称"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="刘玲玲"
                    android:background="@null"
                    android:textColor="#727071"
                    android:textSize="15sp" />
            </LinearLayout>
			<!--  one end -->
          
          
          	<!--  one  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_account_manager_list_item"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0"
                    android:gravity="center|left"
                    android:text="性别"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/sexEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="女"
                    android:background="@null"
                    android:textColor="#727071"
                    android:textSize="15sp" />
            </LinearLayout>
			<!--  one end -->
          

            <!-- one -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_account_manager_list_item"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0"
                    android:gravity="center|left"
                    android:text="生日"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/birthEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center"
                    android:text="1987-09-24"
                    android:textColor="#727071"
                    android:textSize="15sp" />
            </LinearLayout>
            <!-- one end -->


            <!-- one -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_account_manager_list_item"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0"
                    android:gravity="center|left"
                    android:text="城市"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/cityEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="广州"
                    android:background="@null"
                    android:textColor="#727071"
                    android:textSize="15sp" />
            </LinearLayout>
            <!-- one end -->


            <!-- one -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_account_manager_list_item"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0"
                    android:gravity="center|left"
                    android:text="个性签名"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/sayingEt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:background="@null"
                    android:text="微笑在你我面前传递，歌声在你我心中荡漾！我是Angle Liu， 我在这里等你！"
                    android:textColor="#727071"
                    android:textSize="15sp" />
            </LinearLayout>
            <!-- one end -->


            <!-- one -->

            <LinearLayout
                android:id="@+id/weiboBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_account_manager_list_item"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0"
                    android:gravity="center|left"
                    android:text="新浪微博"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="right|center"
                    android:inputType="none"
                    android:text="未绑定"
                    android:textColor="#c7c6c7"
                    android:textSize="15sp" />
            </LinearLayout>
            <!-- one end -->
            <!-- one -->

            <LinearLayout
                android:id="@+id/qqBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_account_manager_list_item"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0"
                    android:gravity="center|left"
                    android:text="QQ"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="right|center"
                    android:inputType="none"
                    android:text="未绑定"
                    android:textColor="#c7c6c7"
                    android:textSize="15sp" />
            </LinearLayout>
            <!-- one end -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>