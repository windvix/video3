<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_weight="0"
        android:background="@drawable/title_bar_bg" >

        <!-- back btn -->

        <LinearLayout
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/back_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:gravity="left|center"
                android:text="发现"
                android:textColor="@drawable/back_btn_text_color"
                android:textSize="20sp"
                android:visibility="invisible" />
        </LinearLayout>
        <!-- end back ben -->

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="决赛"
            android:textColor="@color/title_bar_text_color"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/leftBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="56dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pk_video_bg_01" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@drawable/video_play_click_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="56dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pk_video_bg_02" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@drawable/video_play_click_bg" />
    </RelativeLayout>

    <!-- pkRing -->

    <RelativeLayout
        android:id="@+id/ringLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:id="@+id/pkRing"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" >

            <com.athudong.video.component.RingView01
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" >
            </com.athudong.video.component.RingView01>

            <com.athudong.video.component.RingView03
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="13dp" >
            </com.athudong.video.component.RingView03>

            <com.athudong.video.component.RingView02
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="14dp" >
            </com.athudong.video.component.RingView02>

            <com.athudong.video.component.RingView03
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="22dp" >
            </com.athudong.video.component.RingView03>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/pk_circle"
                android:gravity="center"
                android:text="PK"
                android:textColor="@color/title_bar_text_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/leftBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/rightBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <!-- end of pkRing -->


    <!-- left name -->

    <LinearLayout
        android:id="@+id/leftNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/leftNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="#000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="张于杰"
            android:textColor="#fff"
            android:textSize="18sp" />

        <View
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_weight="0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1" />
    </LinearLayout>
    <!-- end of left name -->


    <!-- right name -->

    <LinearLayout
        android:id="@+id/rightNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1" />

        <View
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/rightNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="#000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="李嘉怡"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- right name end -->


    <!-- left Com -->

    <LinearLayout
        android:id="@+id/leftComLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="190dp"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/leftZoneBtn"
            android:layout_width="@dimen/pk_component_size"
            android:layout_height="@dimen/pk_component_size"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pk_01" />

        <ImageView
            android:id="@+id/leftVideoBtn"
            android:layout_width="@dimen/pk_component_size"
            android:layout_height="@dimen/pk_component_size"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pk_02" />

        <ImageView
            android:layout_width="@dimen/pk_component_size"
            android:layout_height="@dimen/pk_component_size"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pk_03" />
    </LinearLayout>
    <!-- left Com end -->


    <!-- right Com -->

    <LinearLayout
        android:id="@+id/rightComLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="190dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:layout_width="@dimen/pk_component_size"
            android:layout_height="@dimen/pk_component_size"
            android:layout_marginLeft="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pk_03" />

        <ImageView
            android:id="@+id/rightVideoBtn"
            android:layout_width="@dimen/pk_component_size"
            android:layout_height="@dimen/pk_component_size"
            android:layout_marginLeft="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pk_02" />

        <ImageView
            android:id="@+id/rightZoneBtn"
            android:layout_width="@dimen/pk_component_size"
            android:layout_height="@dimen/pk_component_size"
            android:layout_marginLeft="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pk_01" />
    </LinearLayout>
    <!-- right com end -->


	<Button 
	    android:id="@+id/thumbBtn"
	    android:layout_width="100dp"
	    android:layout_height="45dp"
	    android:text="投她"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="20dp"
	    android:textColor="@drawable/text_color_selector"
	    android:background="@drawable/red_btn_selector"
	    />

</RelativeLayout>